// Note: The function definitions for _fstat, _close, etc., might still
// require some basic type definitions. If errors persist, we will add
// a minimal `sys/stat.h` definition. For now, we remove the includes.

// We provide dummy definitions for types that were in the removed headers.
struct stat
{
  int st_mode;
};

#define S_IFCHR 0x0020000

int __io_putchar(int ch) __attribute__((weak));
int __io_getchar(void) __attribute__((weak));


int _close(int file)
{
	return -1;
}

int _fstat(int file, struct stat *st)
{
	st->st_mode = S_IFCHR;
	return 0;
}

int _isatty(int file)
{
	return 1;
}

int _lseek(int file, int ptr, int dir)
{
	return 0;
}

int _read(int file, char *ptr, int len)
{
	return 0;
}

int _write(int file, char *ptr, int len)
{
	return len;
}

void* _sbrk(int incr)
{
    extern char _end; /* Defined by the linker */
    static char *heap_end;
    char *prev_heap_end;

    if (heap_end == 0)
    {
        heap_end = &_end;
    }
    prev_heap_end = heap_end;

    // Note: This is a very basic heap implementation and has no out-of-memory check
    heap_end += incr;
    return (void*) prev_heap_end;
}
